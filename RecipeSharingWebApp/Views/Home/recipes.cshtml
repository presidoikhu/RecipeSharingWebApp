@model RecipesSharingWebApp.ViewModels.RecipeMainViewModel
@using Microsoft.AspNetCore.Identity
@using RecipesSharingWebApp.Areas.Admin.Models
@inject RecipesSharingWebApp.Helpers.UtilityService utilityService
@inject UserManager<ApplicationUser> userManager

@{
    var profileImagesRootPath = utilityService.GetProfileImagesRootPath(operationType: false);
    var userProfileImagePath = profileImagesRootPath + "/";
}

<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Chicken Recipes</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /bradcam_area  -->
<!-- recepie_area_start  -->
<div class="recepie_area plus_padding">
    <div class="container">
        <div class="row">
            @{
                foreach (var recipe in Model.Recipes)
                {

                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="single_recepie text-center">
                            <div class="recepie_thumb">
                                <img src="@Url.Content(@userProfileImagePath +  @recipe.CoverImageUrl)" alt="" class="img-fluid">
                            </div>
                            <h3>@recipe.Title</h3>
                            <h3>@recipe.Description</h3>
                            <h3>@recipe.Instruction</h3>
                            <span>@recipe.Category</span>
                            <p>@recipe.TimeSpan</p>

                            <a asp-area="admin" asp-controller="dashboard" asp-action="button_click" asp-route-id="@recipe.Id"><i class="fa fa-heart favorite" id="favoriteButton"></i></a>


                        </div>
                    </div>
                }
            }
            
    </div>
</div>
    <button class="btn" style="margin-left:50%; margin-bottom:15px"><a asp-controller="Home" asp-action="AddRecipe">Add Recipe</a></button>
<!-- /recepie_area_start  -->
<!-- latest_trand     -->
<div class="latest_trand_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="trand_info text-center">
                    <p>Thousands of recipes are waiting to be watched</p>
                    <h3>Discover latest trending recipes</h3>
                    <a href="#" class="boxed-btn3">View all Recipes</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ latest_trand     -->
<!-- download_app_area -->
<div class="download_app_area plus_padding">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="download_thumb">
                    <div class="big_img">
                        <img src="~/tas/img/video/big_1.png" alt="">
                    </div>
                    <div class="small_01">
                        <img src="~/tas/img/video/small_sm1.png" alt="">
                    </div>
                    <div class="small_02">
                        <img src="~/tas/img/video/sm2.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="download_text">
                    <h3>
                        Download app to
                        get recipes from
                        Everywhere
                    </h3>
                    <div class="download_android_apple">
                        <a class="active" href="#">
                            <div class="download_link d-flex">
                                <i class="fa fa-apple"></i>
                                <div class="store">
                                    <h5>Available</h5>
                                    <p>on App Store</p>
                                </div>
                            </div>
                        </a>
                        <a href="#">
                            <div class="download_link d-flex">
                                <i class="fa fa-android"></i>
                                <div class="store">
                                    <h5>Download</h5>
                                    <p>from Play Store</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ download_app_area -->